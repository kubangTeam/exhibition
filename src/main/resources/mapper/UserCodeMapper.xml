<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hqu.cst.kubang.exhibition.dao.UserCodeDao">
    <insert id="saveUserCode" parameterType="UserCode">
        insert into usercode(account,code,sending_time) values(#{account}, #{code},#{sendingTime})
    </insert>

    <select id="queryUserCode" parameterType="String" resultType="UserCode">
        select * from usercode where account = #{account} order by sending_time+0 desc limit 1
    </select>

    <delete id="deleteUserCode" parameterType="String">
        delete from usercode where account = #{account}
    </delete>
</mapper>
